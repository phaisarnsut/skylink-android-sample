<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="@dimen/dp_10dp"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_data_room_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textIsSelectable="true"/>

    <TextView
        android:id="@+id/txt_data_transfer_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioGroup
            android:id="@+id/radio_grp_peers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radio_btn_peer_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_all_peers"
                android:visibility="invisible"/>

            <RadioButton
                android:id="@+id/radio_btn_peer1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="invisible"/>

            <RadioButton
                android:id="@+id/radio_btn_peer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="invisible"/>

            <RadioButton
                android:id="@+id/radio_btn_peer3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="invisible"/>

            <RadioButton
                android:id="@+id/radio_btn_peer4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="invisible"/>

        </RadioGroup>
    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/lin_layout_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_send_data_to_peer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:text="@string/send_data_peer"
            android:background="@drawable/button_corner_ripple"
            android:layout_marginRight="@dimen/dp_10dp"/>

        <Button
            android:id="@+id/btn_send_data_to_room"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:text="@string/send_data_room"
            android:background="@drawable/button_corner_ripple"/>

    </LinearLayout>

</LinearLayout>